            "url": {
              "raw": "{{baseUrl}}/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["checkout"]
            }
          }
        },
        {
          "name": "Checkout With Discount",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
